package relogio.classes;

import java.util.Objects;

public class AnguloRelogio {

	private int hora;
	private int minutos;
	private int angulo;
	
	public AnguloRelogio() {
		// TODO Auto-generated constructor stub
	}

	public int getHora() {
		return hora;
	}

	public void setHora(int hora) {
		this.hora = hora;
	}

	public int getMinutos() {
		return minutos;
	}

	public void setMinutos(int minutos) {
		this.minutos = minutos;
	}

	public int getAngulo() {
		return angulo;
	}

	public void setAngulo(int angulo) {
		this.angulo = angulo;
	}

	@Override
	public int hashCode() {
		return Objects.hash(angulo, hora, minutos);
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		AnguloRelogio other = (AnguloRelogio) obj;
		return angulo == other.angulo && hora == other.hora && minutos == other.minutos;
	}

	@Override
	public String toString() {
		return "AnguloRelogio [hora=" + hora + ", minutos=" + minutos + ", angulo=" + angulo + "]";
	}
	
	public int retornaAnguloRelogio(int hora, int minuto) {
		this.angulo = 0;
		
		int anguloHora = (360/12) * hora;
		int anguloMinuto = (360/60 * minuto);
		
		if((hora - minuto) > 0) {
			return anguloHora - anguloMinuto;
		} else {
			return anguloMinuto - anguloHora;
		}
	}
}
